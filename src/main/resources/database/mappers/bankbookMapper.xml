<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.bh.b1.bankbook.BankBookDAO">
  	
  	<select id="getCount" resultType="java.lang.Long">
  		SELECT COUNT(BOOKNUMBER) FROM BANKBOOK
  	</select>
  	
  	<select id="getList" parameterType="com.bh.b1.util.Pager" resultType="com.bh.b1.bankbook.BankBookDTO">
  		SELECT * FROM
		    (SELECT ROWNUM R, BK.* FROM 
		            (SELECT * 
		            FROM BANKBOOK
		            ORDER BY BOOKNUMBER DESC
		            ) 
		        BK
		    )
		WHERE R BETWEEN #{startRow} AND #{lastRow}
  	</select>
  	
  	<select id="getSelect" parameterType="com.bh.b1.bankbook.BankBookDTO" resultType="com.bh.b1.bankbook.BankBookDTO">
  		SELECT * FROM BANKBOOK WHERE BOOKNUMBER=#{bookNumber}
  	</select>
  	
  	<insert id="setInsert" parameterType="com.bh.b1.bankbook.BankBookDTO">
  		INSERT INTO BANKBOOK VALUES(BANKBOOK_SEQ.NEXTVAL, #{bookName}, #{bookRate}, #{bookUse})
  	</insert>
  	
  	<delete id="setDelete" parameterType="java.lang.Long">
  		DELETE BANKBOOK WHERE BOOKNUMBER=#{bookNumber}
  	</delete>
  	
  	<!-- id는 DAO에 있는 동일한 메서드명으로 -->
  	<update id="setUpdate" parameterType="com.bh.b1.bankbook.BankBookDTO">
  		UPDATE BANKBOOK SET BOOKNAME=#{bookName}, BOOKRATE=#{bookRate}, BOOKUSE=#{bookUse} WHERE BOOKNUMBER=#{bookNumber}
  	</update>
  	
  </mapper>